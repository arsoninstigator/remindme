{
    "manifest_version": 3,
    "name": "RemindMe",
    "version": "1.0",
    "description": "Save upcoming scholarships and get reminders when the deadlines approach.",
    "permissions": ["notifications", "storage", "alarms", "tabs"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  